{
	"publisher": "WriteHelper",
	"name": "writehelper",
	"displayName": "WriteHelper",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.writeHelper.selectCountFlag",
				"title": "selectCountFlag"
			}
		],
		"configuration": {
			"type": "object",
			"title": "写作助手",
			"properties": {
				"writeHelper.debug": {
					"type": "boolean",
					"default": false,
					"description": "是否开启 debug 模式"
				},
				"writeHelper.sync": {
					"type": "boolean",
					"default": false,
					"description": "是否开启同步"
				},
				"writeHelper.cron": {
					"type": "string",
					"default": "*/30 * * * * *",
					"description": "corn 表达式, 默认是 30 秒同步一次"
				},
				"writeHelper.host": {
					"type": "string",
					"default": "http://127.0.0.1:8080",
					"description": "服务器地址"
				},
				"writeHelper.id": {
					"type": "string",
					"default": "",
					"description": "身份标识"
				},
				"writeHelper.countFlag": {
					"type": "number",
					"default": 0,
					"description": "字数统计 flag {0: 所有文字, 1: 去除符号}"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/node-schedule": "^1.2.4",
		"@types/request": "^2.48.2",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"node-schedule": "^1.3.2",
		"request": "^2.88.0"
	}
}
